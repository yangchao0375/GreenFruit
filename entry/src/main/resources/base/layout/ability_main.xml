<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bjimg">
    <DependentLayout
        ohos:id="$+id:choose_mode_btn"
        ohos:height="204vp"
        ohos:width="260vp"
        ohos:background_element="$media:startbtn"
        ohos:center_in_parent="true">
    </DependentLayout>
    <Checkbox
        ohos:below="$id:choose_mode_btn"
        ohos:id="$+id:robotic_arm1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20vp"
        ohos:text="短型采摘机械臂"
        ohos:text_size="18fp"
        ohos:horizontal_center="true"
        ohos:text_color="#fff"
        ohos:text_color_on="yellow"
        ohos:text_color_off="#000000"
        />
    <Checkbox
        ohos:below="$+id:robotic_arm1"
        ohos:id="$+id:robotic_arm2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20vp"
        ohos:text="长型采摘机械臂"
        ohos:text_size="18fp"
        ohos:horizontal_center="true"
        ohos:text_color="#fff"
        ohos:text_color_on="yellow"
        ohos:text_color_off="#000000"
        />
    <Checkbox
        ohos:below="$+id:robotic_arm2"
        ohos:id="$+id:robotic_arm3"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20vp"
        ohos:text="喷灌机械臂"
        ohos:text_size="18fp"
        ohos:horizontal_center="true"
        ohos:text_color="#fff"
        ohos:text_color_on="yellow"
        ohos:text_color_off="#000000"
        />
    <Checkbox
        ohos:below="$+id:robotic_arm3"
        ohos:id="$+id:robotic_arm4"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20vp"
        ohos:text="锄型机械臂"
        ohos:text_size="18fp"
        ohos:horizontal_center="true"
        ohos:text_color="#fff"
        ohos:text_color_on="yellow"
        ohos:text_color_off="#000000"
        />
</DependentLayout>