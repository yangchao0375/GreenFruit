<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:back_makesure">

    <TextField
        ohos:id="$+id:car_ip_textfield"
        ohos:height="40vp"
        ohos:width="250vp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="200vp"
        ohos:text_size="20fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="$graphic:background_white_radius_10"
        ohos:left_padding="10vp"
        ohos:horizontal_center="true"
        ohos:text_input_type="pattern_number"
        ohos:hint="请输入小车的IP地址"
        ohos:hint_color="#ccc"
        ohos:text_color="#333"
        />
    <Button
        ohos:below="$id:car_ip_textfield"
        ohos:id="$+id:start_ctrl_car_btn"
        ohos:height="55vp"
        ohos:width="110vp"
        ohos:text="确认"
        ohos:background_element="$media:choosebtnbg"
        ohos:top_margin="210vp"
        ohos:text_size="18fp"
        ohos:horizontal_center="true"
        ohos:text_color="#fff"/>

</DependentLayout>